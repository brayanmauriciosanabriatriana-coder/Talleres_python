#datos por teclado
aprendices = []
edades = []


cantidad = int(input("¿Cuántos aprendices vas a ingresar? "))


for i in range(cantidad):
    nombre = input(f"Ingrese nombre del aprendiz #{i+1}: ")
    edad = input(f"Ingrese edad de {nombre}: ")
    
    aprendices.append(nombre)
    edades.append(edad)



for i in range(cantidad):
    print(f"{aprendices[i]} tiene {edades[i]} años")

# aprendiz con mayor edad

aprendices = []
edades = []

cantidad = int(input("¿Cuántos aprendices vas a ingresar? "))

for i in range(cantidad):
    nombre = input(f"Ingrese nombre del aprendiz #{i+1}: ")
    edad = input(f"Ingrese edad de {nombre}: ")
    
    aprendices.append(nombre)
    edades.append(edad)

for i in range(cantidad):
    print(f"{aprendices[i]} tiene {edades[i]} años")



edad_maxima = max(edades)  
indice_mayor = edades.index(edad_maxima) 
aprendiz_mayor = aprendices[indice_mayor] 

print(f"\nEl aprendiz de mayor edad es  {aprendiz_mayor}  {edad_maxima} ")

#nombre intructora de primero

aprendices = ["maria","juan","lois","camilo","brayan"]
aprendices.insert(1,"sandra")
print(aprendices)

#aprendicezs de 18 años 
aprendices = []
edades = []


contador_18 = 0

cantidad = int(input("¿Cuántos aprendices vas a ingresar? "))


for i in range(cantidad):
    nombre = input(f"Ingrese nombre del aprendiz #{i+1}: ")
    edad = int(input(f"Ingrese edad de {nombre}: ")) 
    
    aprendices.append(nombre)
    edades.append(edad)

    if edad == 18:
        contador_18 += 1



for i in range(cantidad):
    print(f"{aprendices[i]} tiene {edades[i]} años")


print(f" Total de aprendices con 18 años: {contador_18}")

#apreindiz al final de la lista 
aprendices = ["maria","juan","lois","camilo","brayan"]
aprendices.insert(5,"sandra")
print(aprendices)

#eliminar nombre de la instructora

instructores = ["Ana", "Luis", "sandra", "Carlos"]
print(instructores)
del instructores[2]   
print(instructores)
